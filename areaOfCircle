// Example program
#include <iostream>
using namespace std;
#define PI 3.14

int main() {
    
   float radius, area ;
    cout << "\n Enter the radius of a circle ";
    cin >> radius;
    area = PI * radius * radius;
    cout << "\n The area of a circle with radius " << radius << " cm is " << area << " sq. cm. "<< endl;
    return 0;
}
